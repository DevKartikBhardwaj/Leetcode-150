//used set instead of map :)

class Solution {
    public int longestConsecutive(int[] nums) {
        Set<Integer> set = new HashSet<>();
        for (int num : nums) set.add(num);

        int ans = 0;
        for (int num : nums) {
            if (!set.contains(num - 1)) { 
                int curr = num;
                int cnt = 1;
                while (set.contains(curr + 1)) {
                    curr++;
                    set.remove(curr);
                    cnt++;
                }
                ans = Math.max(ans, cnt);
            }
        }
        return ans;
    }
}
