//first approach- used hashmap

//second approach- use array to hash character- slight improvement in space complexity

class Solution {
    public boolean canConstruct(String ransomNote, String magazine) {
        int[] hash= new int[256];

        for(char ch: magazine.toCharArray())
            hash[ch]++;
        
        for(char ch: ransomNote.toCharArray()){
            if(hash[ch]==0)
                return false;
            hash[ch]--;
        }
        return true;
    }
}
