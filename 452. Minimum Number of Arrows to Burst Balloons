
//i modified the basic merge interval template :)
class Solution {
    public int findMinArrowShots(int[][] intervals) {
        Arrays.sort(intervals, (a, b) -> {
            if (a[0] != b[0])
                return Integer.compare(a[0], b[0]);
            else
                return Integer.compare(a[1], b[1]);
        });
        int cnt=0;
        int[]prev=null;
        for (int[] interval : intervals) {
            if (prev==null || prev[1] < interval[0]) {
                prev=interval;
                cnt++;
            } else{
                prev[0]=Math.max(prev[0],interval[0]);
                prev[1]=Math.min(prev[1],interval[1]);
            }
        }
        return cnt;
    }
}
