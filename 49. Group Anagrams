//used the sorted str as key

class Solution {
    public List<List<String>> groupAnagrams(String[] strs) {
        Map<String,List<String>> mp=new HashMap<>();
        
        for(String str:strs){
            char[] x=str.toCharArray();
            Arrays.sort(x);
            String sortedStr=new String(x);
            if(!mp.containsKey(sortedStr)){
                List<String>temp=new ArrayList<>();
                temp.add(str);
                mp.put(sortedStr,temp);
                continue;
            }
            List<String>temp=mp.get(sortedStr);
            temp.add(str);
            mp.put(sortedStr,temp);
        }

        List<List<String>>ans=new ArrayList<>(mp.values());
        return ans;
    }
}
