//the below approach is oprimal with 0(1) space
class Solution {
    boolean doesContainZero(int[] arr){
        for(int i=0;i<arr.length;i++){
            if(arr[i]==0)return true;
        }
        return false;
    }
    public void setZeroes(int[][] matrix) {
         int m=matrix.length,n=matrix[0].length;
         boolean a=doesContainZero(matrix[0]);
        int[] tempArr=new int[m];
        for(int i=0;i<m;i++){
            tempArr[i]=matrix[i][0];
        }
         boolean b=doesContainZero(tempArr);

        for(int i=1;i<m;i++){
            for(int j=1;j<n;j++){
                if(matrix[i][j]==0){
                    matrix[i][0]=0;
                    matrix[0][j]=0;
                }
            }
        }

        for(int i=1;i<n;i++){
            if(matrix[0][i]==0){
                for(int j=1;j<m;j++){
                    matrix[j][i]=0;
                }
            }
        }

        for(int i=1;i<m;i++){
            if(matrix[i][0]==0){
                for(int j=1;j<n;j++)matrix[i][j]=0;
            }
        }

        if(a==true){
            for(int i=0;i<n;i++)matrix[0][i]=0;
        }

        if(b==true){
            for(int i=0;i<m;i++)matrix[i][0]=0;
        }

    }
}
